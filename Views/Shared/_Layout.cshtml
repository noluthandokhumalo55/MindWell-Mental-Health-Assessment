<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - <i class="fas fa-brain" style="color: purple;"></i> MindWell</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mindwell.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        /* Make navbar links turn purple on hover */
        .navbar-nav .nav-link:hover {
            color: purple !important;
        }

        /* Style for MindWell brand */
        .navbar-brand {
            font-size: 1.2rem; /* Smaller font size */
            font-weight: bold; /* Make the text bold */
        }

            .navbar-brand i {
                font-size: 1.4rem; /* Smaller icon size */
                margin-right: 8px; /* Adjusted spacing between icon and text */
            }

        /* Style for the Login button */
        .btn-purple {
            font-size: 1.2rem; /* Same font size as MindWell */
            font-weight: bold; /* Make the text bold */
            padding: 8px 17px; /* Adjust padding to make it look consistent */
            background-color: purple;
            color: black;
            margin-left: 200px; /* Move the button to the right */
        }

            .btn-purple:hover {
                background-color: #6a2a7f; /* Darker purple on hover */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-brain" style="color: purple;"></i> MindWell
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Centered navigation links -->
                    <div class="d-flex justify-content-center flex-grow-1">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Assessments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MoodTracker">Mood Tracker</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Resources">Resources</a>
                            </li>
                        </ul>
                    </div>
                    <!-- Login button moved to the right -->
                    <a class="btn btn-purple" asp-area="" asp-controller="Login_R" asp-action="Index">Login</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - <i class="fas fa-brain" style="color: purple;"></i> MindWell - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
