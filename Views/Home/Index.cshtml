@{
    ViewData["Title"] = "Home Page";
}

<h1 class="small-heading"><strong>Mental Health Assessment Tool</strong></h1>

<div class="container">
    <!-- Assessment Cards -->
    <div class="row">
        <div class="col-md-4">
            <div class="assessment-card card">
                <div style="display: flex; align-items: center;">
                    <i class="fas fa-heart icon" style="color: purple; margin-right: 10px;"></i>
                    <strong>Depression Screening</strong>
                </div>
                <p>Measure your anxiety levels and get personalized recommendations</p>
                <button class="btn btn-pink">Start Assessment</button>
            </div>
        </div>

        <div class="col-md-4">
            <div class="assessment-card card">
                <div style="display: flex; align-items: center;">
                    <i class="fas fa-cloud icon" style="color: #2196f3; margin-right: 10px;"></i>
                    <strong>Anxiety Check</strong>
                </div>
                <p>Measure your anxiety levels and get personalized recommendations</p>
                <button class="btn btn-blue">Start Assessment</button>
            </div>
        </div>

        <div class="col-md-4">
            <div class="assessment-card card">
                <div style="display: flex; align-items: center;">
                    <i class="fas fa-thermometer-half icon" style="color: #4caf50; margin-right: 10px;"></i>
                    <strong>Stress Level Test</strong>
                </div>
                <p>Evaluate your stress levels and learn coping strategies</p>
                <button class="btn btn-green">Start Assessment</button>
            </div>
        </div>
    </div>

    <!-- Bar Chart Section -->
    <div class="row">
        <div class="col-12">
            <div class="chart-container card">
                <h4 style="text-align: center; margin-bottom: 20px;">Weekly Mental Health Assessment</h4>
                <canvas id="myBarChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Spacer -->
    <div style="height: 40px;"></div>

    <!-- Your Personalized Insights Section (White Container) -->
    <div class="row">
        <div class="col-12">
            <div class="insights-container card">
                <h3 class="insights-title" style="text-align: left;">Your Personalized Insights</h3>

                <!-- Two Sub-Containers Inside White Container -->
                <div class="row">
                    <!-- Mood Pattern -->
                    <div class="col-md-6">
                        <div class="insight-card light-purple">
                            <div class="insight-header">
                                <i class="fas fa-lightbulb" style="color: purple; font-size: 24px; margin-right: 10px;"></i>
                                <strong>Mood Pattern</strong>
                            </div>
                            <p>Learn more about how tracking mood patterns can help you understand your emotional trends over time.</p>
                            <a href="#" class="insight-link purple-link">Learn more</a>
                        </div>
                    </div>

                    <!-- Recommendation Resources -->
                    <div class="col-md-6">
                        <div class="insight-card light-blue">
                            <div class="insight-header">
                                <i class="fas fa-book" style="color: #2196f3; font-size: 24px; margin-right: 10px;"></i>
                                <strong>Recommendation Resources</strong>
                            </div>
                            <p>Learn how tracking mood patterns reveals emotional trends, plus curated meditation exercises for you.</p>
                            <a href="#" class="insight-link blue-link">View Resources</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Add Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('myBarChart').getContext('2d');
    var myBarChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
            datasets: [{
                label: 'Assessment Scores',
                data: [65, 59, 80, 81, 56, 55, 40],
                backgroundColor: '#6a4b9c',
                borderRadius: 8,
                borderColor: '#6a4b9c',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: { beginAtZero: true },
                y: { beginAtZero: true }
            }
        }
    });

    // Scroll animation for insights section
    document.addEventListener("DOMContentLoaded", function () {
        let insightsSection = document.querySelector(".insights-container");

        let observer = new IntersectionObserver(function (entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    insightsSection.classList.add("show");
                }
            });
        }, { threshold: 0.3 });

        observer.observe(insightsSection);
    });
</script>

<style>
    body {
        background-color: #f4e6ff;
        padding-top: 20px;
    }

    .assessment-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

    .btn {
        border-radius: 4px;
        padding: 10px 20px;
        color: white;
        font-size: 14px;
        border: none;
        cursor: pointer;
    }

    .btn-pink {
        background-color: purple;
    }

    .btn-blue {
        background-color: #2196f3;
    }

    .btn-green {
        background-color: #4caf50;
    }

    .card {
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .small-heading {
        font-size: 24px;
        text-align: left;
        padding-left: 15px;
        margin-bottom: 20px;
    }

    .chart-container {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        height: 400px;
        margin-top: 40px;
    }

    canvas {
        width: 100% !important;
        height: 100% !important;
    }

    /* Insights Section */
    .insights-container {
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
        opacity: 0;
        transform: translateY(50px);
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }

        .insights-container.show {
            opacity: 1;
            transform: translateY(0);
        }

    .insights-title {
        font-weight: bold;
        font-size: 22px;
        margin-bottom: 20px;
    }

    .insight-card {
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .light-purple {
        background-color: #f4e6ff;
    }

    .light-blue {
        background-color: #e3f2fd;
    }
</style>
